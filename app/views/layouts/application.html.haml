!!!
%html
  %head
    %title Inventory
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    #session
      =link_to 'Sign In', sign_in_path
      =link_to 'Sign Out', sign_out_path
    #notices
      -if flash[:notice].present?
        %p
          notice:
          =flash[:notice]
      -if flash[:error].present?
        %p
          error:
          =flash[:error]
      -if flash[:alert].present?
        %p
          alert:
          =flash[:alert]
    = yield
